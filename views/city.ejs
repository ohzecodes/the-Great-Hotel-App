<!DOCTYPE html>

<html lang="en">

<head>
  <%-include("p/head")%>
<link rel="stylesheet" href="/ejsCity.css">
   
</head>

<body>
  <%-include("p/header")%>
<main>
    <h1 id="cityname">
      <%- hotel[0].city%>
    </h1>
    <div>
    <% for (let i=0;i<hotel.length;i++){%>
      <div class="onetwo">
        <a href="/show/<%=hotel[i].city%>/<%=hotel[i].name%>" target="_blank">
          <div class="search-result new-job">

            <div class="icon">
              <img src="<%=hotel[i].filepath%>" alt="" width="120" height="100" />
            </div>
            <div class="content">
              <h2>
                <%=hotel[i].name%>
              </h2>
              <div>
                <p id="address">
                  <%=hotel[i].streetAddress%>
                </p>
              </div>
              <p>
                <span class="stars">
                  <% let {avgrating}=hotel[i]%>
                    <% avgrating=Math.floor(avgrating) %>
                      <% for(let i=0;i<avgrating;i++){%>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-star-fill"
                          viewBox="0 0 16 16">
                          <path
                            d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                        <% } %>
                          <% for(let i=avgrating;i<5;i++){%>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-star"
                              viewBox="0 0 16 16">
                              <path
                                d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                            </svg>
                            <% } %>




                </span>
                <span class="reviews">
                  <%= hotel[i].rev.length%> reviews
                </span>
              </p>

            </div>
          </div>
        </a>
        <a href="<%=hotel[i].website%>"  id="website" target="_blank">
        <p >
            website
        </p> </a>
      </div>
      <%}%></div>
      
    </main>
        <%-include("p/footer")%>
</body>

</html>